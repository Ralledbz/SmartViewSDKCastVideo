<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBFBFB">

    <RelativeLayout
	    android:id="@+id/video_thumb_container"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minHeight="100dp"
        android:padding="10dp">
	    <ImageView
	        android:id="@+id/video_thumb"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:background="@android:color/black"/>
	    <ProgressBar
	        android:id="@+id/video_thumb_loader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"/>
		<View
	        android:id="@+id/video_gray"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_alignLeft="@id/video_thumb"
	        android:layout_alignStart="@id/video_thumb"
	        android:layout_alignRight="@id/video_thumb"
	        android:layout_alignEnd="@id/video_thumb"
	        android:layout_alignBottom="@id/video_thumb"
	        android:layout_alignTop="@id/video_thumb"
	        android:background="#A0A0A0A0"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/video_thumb_container"
        android:layout_toRightOf="@+id/video_thumb_container"
        android:textSize="16sp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/video_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/video_thumb_container"
        android:layout_toRightOf="@+id/video_thumb_container"
        android:textSize="10sp"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/video_thumb_container"
        android:layout_alignBottom="@+id/video_thumb_container"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textSize="10sp" />

</RelativeLayout>